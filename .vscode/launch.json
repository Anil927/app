    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "MONGO_URI": "mongodb://localhost:27017",
                "AUTH_SERVICE_URL": "http://0.0.0.0:8001"
            },
            "args": [
                "main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}/core_service"
        }
    ]
}